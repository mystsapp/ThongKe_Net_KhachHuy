                                <option value="MB">Miền bắc</option>
                                <option value="KDO">KDOnline</option>
                            </select>
                            @*<input type="text" class="form-control" name="phai" id="ddlPhai">*@
                        </div>

                        <div class="clearfix"></div>

                        <div class="form-group col-md-3">
                            <label for="ddlChiNhanh">Chi nhánh:</label>
                            <select class="form-control" id="ddlChiNhanh">
                                @*<option value="">--Chọn giới tính--</option>*@
                                <option value="STS">STS</option>
                                <option value="STL">STL</option>
                            </select>
                            @*<input type="text" class="form-control" name="phai" id="ddlPhai">*@
                        </div>


                        <div class="form-group col-md-3">
                            <label for="ddlDaiLy">Dại lý:</label>
                            <select class="form-control" id="ddlDaiLy">
                                @*<option value="">--Chọn giới tính--</option>*@
                                <option value="daily1">daily1</option>
                                <option value="daily2">daily2</option>
                            </select>
                            @*<input type="text" class="form-control" name="phai" id="ddlPhai">*@
                        </div>

                        @*<div class="form-group col-md-3">

                            <label for="ddlRole">Role:</label>
                            <select class="form-control" id="ddlRole">
                                <option value="admin">admin</option>
                                <option value="user">user</option>
                            </select>
                        </div>*@


                        <div class="form-group col-md-3">
                            <label for="ddlKhoi">Khoi:</label>
                            <select class="form-control" id="ddlKhoi">
                                @*<option value="">--Chọn giới tính--</option>*@
                                <option value="OB">OB</option>
                                <option value="ND">ND</option>
                            </select>
                        </div>

                        <div class="checkbox form-group col-md-3">
                            <label><input type="checkbox" id="ckTrangThai"> Trạng thái:</label>
