
@{
    ViewBag.Title = "SaleTheoNgayDi";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var cn = "";
    if ((Session["chinhanh"]) == null)
    {
        cn = "";
    }
    else
    {
        cn = Session["chinhanh"].ToString();
    }

    var nhom = Session["nhom"].ToString();

}


@section scripts{
    <script src="~/Assets/Admin/js/User/bootbox.min.js"></script>
    <script src="~/Assets/Admin/js/User/mustache.min.js"></script>
    <script src="~/Assets/Admin/js/User/jquery.twbsPagination.min.js"></script>
    <script src="~/Assets/Admin/js/User/jquery.validate.min.js"></script>
    <script src="~/Assets/Admin/js/User/jquery-ui/jquery-ui.js"></script>
    <script src="~/Assets/Admin/js/SaleTheoNgayDi/saleTheoNgayDiController.js"></script>
    <link href="~/Assets/Admin/css/user.css" rel="stylesheet" />
    @*<script>
            $(function () {
                $('.modal-dialog').draggable();
            });
        </script>*@

}

<div class="row">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4>DOANH THU SALES THEO NGÀY ĐI</h4>
        </div>
        <div class="panel-body">
            <form id="frmSearch" asp-controller="BaoCao" asp-action="SaleTheoNgayDi" method="post" class="form-horizontal" role="form" autocomplete="off">
                <div class="row">
                    <div class="col-md-12">
                        <input type="hidden" name="cn" data-cn="@cn" id="hidCn" />
                        <input type="hidden" name="hidnhom" data-nhom="@nhom" id="hidNhom" />
                        <div class="col-md-2">
                            Từ ngày
                            <input type="text" class="form-control maskInput" name="tungay" id="txtTuNgay" placeholder="Type date..." />
                        </div>

                        <div class="col-md-2">
                            Đến ngày
                            <input type="text" class="form-control maskInput" name="denngay" id="txtDenNgay" placeholder="Type date..." />
                        </div>

                        @*<div class="col-md-3">
            Văn phòng
            <select class="form-control" id="ddlDaiLy" name="daily">
                <option value="">Tất cả</option>
                <option value="45 LE THANH TON">45 LE THANH TON</option>
            </select>
        </div>*@

                        <div class="col-md-3">
                            Chi nhánh
                            <select class="form-control" id="ddlChiNhanh" name="chinhanh">
                                <option value=""></option>
                                <option value="sts">sts</option>
                                <option value="STL">STL</option>
                            </select>
                        </div>

                        @if (nhom == "Admins" || nhom == "TNB" || nhom == "DNB" || nhom == "MT" || nhom == "MB")
                        {
                            <div class="col-md-2">
                                Khối
                                <select class="form-control" id="ddlKhoi" name="khoi">
                                    <option value="OB">OB</option>
                                    <option value="ND">ND</option>
                                </select>
                            </div>
                        }
                        else
                        {
                            var khoi = Session["khoi"].ToString();
                            <input type="hidden" data-khoi="@khoi" id="hidKhoi" />
                        }
                        <br />
                        <div class="col-md-3">

                            <span class="btn-group">
                                <button type="button" id="btnSearch" class="btn btn-outline btn-primary"><i class="fa fa-search"></i></button>
                                <button id="btnReset" class="btn btn-outline btn-warning"><i class="fas fa-broom"></i></button>
                                <button id="btnExport" class="btn btn-outline btn-success"><i class="fas fa-file-export"></i></button>
                            </span>
                        </div>
                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <table class="table table-bordered table-hover">
            <thead>
                <tr class="text-left">
                    <td>#</td>
                    <td>STT</td>
                    <td>Người xuất vé</td>
                    <td>Code CN</td>
                    <td>Tổng tiền</td>
                    <td>Doanh số</td>

                </tr>
            </thead>
            <tbody id="tblData" class="table table-hover"></tbody>
        </table>

        <div id="pagination" class="pagination"></div>
    </div>


    <script id="data-template" type="x-tmpl-mustache">
        Hello {{ hoten }}!
        <tr>
            <td>
                <form id="frmDetail" action="/BaoCao/LoadDataSaleTheoNgayDiChitietToExcel">
                    <input type="hidden" name="tungay" id="hidTuNgay" />
                    <input type="hidden" name="denngay" id="hidDenNgay" />
                    <input type="hidden" name="nhanvien" id="hidNhanVien" />
                    <input type="hidden" name="khoi" id="hidKhoi" />
                    <input type="hidden" name="chinhanh" id="hidChiNhanh" />
                    <button type="button" data-chinhanh="{{chinhanh}}" data-nhanvien="{{nguoixuatve}}" class="btn btn-outline btn-success btnExportDetail"><i class="fas fa-file-export"></i></button>

                </form>
            </td>
            <td class="text-center">{{stt}}</td>
            <td class="text-left">{{nguoixuatve}}</td>
            <td class="text-left">{{chinhanh}}</td>
            <td class="text-right">{{{doanhso}}}</td>
            <td class="text-right">{{thucthu}}</td>

        </tr>
    </script>
</div>